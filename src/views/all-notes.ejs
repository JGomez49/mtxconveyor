                                                <td><%= note.customerJobNumber %></td>
                                                <% if (user.name == note.responsible) { %>
                                                    <td style="color: red;"><%= note.project%></td>
                                                <% } %>
                                                <% if (user.name != note.responsible) { %>
                                                    <td><%= note.project %></td>
                                                <% } %>                                                
