                                                <td><%= note.wells %></td>
                                                <td><%= note.budget %></td>
                                                <td><%= note.poc %></td>
                                                <td><%= note.rig %></td>
                                                <td><%= note.responsible %></td>
                                                <td><small><%= note.created %></small></td>
