<div class="col-md-4 mx-auto">

    <div class="card text-center my-4">

        <div class="card-header bg-primary"><h3>New Note</h3></div>

        <div class="card-body bg-primary">

            <form action="/notes/new-note" method="POST" enctype="multipart/form-data">

                <div class="form-group">

                    <input 
                        type="text" 
                        name="mtxJobId"
                        class="form-control my-2 bg-dark"
                        placeholder="MTX Job ID"
                        id="MTXjobNumber"
                        value="<%= jn %>"
                    >

                    <input 
                        type="text" 
                        name="title"
                        class="form-control my-2 bg-dark"
                        placeholder="Title"
                        autofocus
                    >



                    <input 
                        type="text" 
                        name="responsible"
                        class="form-control my-2 bg-dark"
                        placeholder="Responsible"
                    >


                    <textarea 
                        name="description" 
                        id="description" 
                        placeholder="Description"
                        class="form-control my-2 bg-dark"
                    ></textarea>


                    
                    <div>
                        <input class="form-control my-2 bg-dark" 
                        list="datalistOptions1" 
                        id="DataList1" 
                        placeholder="Priority"
                        name="priority"
                        >
                        <datalist id="datalistOptions1">
                            <option value="Extreme"></option>
                            <option value="High"></option>
                            <option value="Medium"></option>
                            <option value="Low"></option>
                        </datalist>
                    </div>                    


                    <div class="input-group mb-3 bg-dark">
                        <span class="input-group-text bg-dark" id="basic-addon1">Due Date</span>
                        <input type="date"
                            id="dueDate" 
                            name="dueDate"
                            class="form-control bg-dark"
                        >
                    </div>



                    <div>
                        <input class="form-control my-2 bg-dark" 
                        list="datalistOptions2" 
                        id="DataList2" 
                        placeholder="Invoice"
                        name="invoice"
                    >
                        <datalist id="datalistOptions2">
                            <option value="Yes">
                            <option value="No">
                        </datalist>
                    </div>
                    


                    <div>
                        <input class="form-control my-2 bg-dark" 
                        list="datalistOptions3" 
                        id="DataList3" 
                        placeholder="Status"
                        name="status"
                    >
                        <datalist id="datalistOptions3">
                            <option value="Not Started">
                            <option value="In Progress">
                            <option value="Completed">
                            <option value="On Hold">
                            <option value="QA/QC">
                        </datalist>
                    </div>
                    


