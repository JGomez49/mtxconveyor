
<%- include ('partials/header.ejs') %>

<div class="row">

    <div class="col-md-4 mx-auto my-4">

        <div class="card">

            <div class="card-header bg-dark"><h4>Member Register</h4></div>

            <img src="https://res.cloudinary.com/metacortexjohn/image/upload/v1658373762/Logo_Metacortex_fzh4by.png"
                        class="mx-auto d-block m-4" width="70%">

            <div class="card-body bg-dark">

                <form action="/users/signup" method="post">

                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password">
                    </div>
                    <br>
                    <button class="btn btn-success btn-block">Sign Up</button>

                    <a href="/notes" class="btn btn-danger btn-block">Cancel</a>

                </form>

            </div>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>